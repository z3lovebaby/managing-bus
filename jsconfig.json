{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@hooks/*": ["hooks/*"],
      "@pages/*": ["pages/*"],
      "@assets/*": ["assets/*"]
    },
    "module": "commonjs",
    "target": "es6",
    "jsx": "react"
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}